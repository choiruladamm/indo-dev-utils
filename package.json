{
  "name": "@indodev/toolkit",
  "version": "0.0.1",
  "description": "Indonesian developer utilities for validation, formatting, and more",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./nik": {
      "types": "./dist/nik/index.d.ts",
      "import": "./dist/nik/index.js",
      "require": "./dist/nik/index.cjs"
    },
    "./phone": {
      "types": "./dist/phone/index.d.ts",
      "import": "./dist/phone/index.js",
      "require": "./dist/phone/index.cjs"
    },
    "./currency": {
      "types": "./dist/currency/index.d.ts",
      "import": "./dist/currency/index.js",
      "require": "./dist/currency/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "pnpm run build && pnpm run test:run && publint",
    "changeset": "changeset",
    "release": "changeset publish"
  },
  "keywords": [
    "indonesia",
    "indonesian",
    "validation",
    "nik",
    "npwp",
    "phone",
    "rupiah",
    "utilities",
    "typescript"
  ],
  "author": "Choirul Adam <choiruladamm@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/choiruladamm/indo-dev-utils"
  },
  "bugs": {
    "url": "https://github.com/choiruladamm/indo-dev-utils/issues"
  },
  "homepage": "https://github.com/choiruladamm/indo-dev-utils#readme",
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "2.1.9",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.39.1",
    "prettier": "^3.4.2",
    "publint": "^0.3.15",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.49.0",
    "vitest": "^2.1.8",
    "zod": "^3.24.1"
  }
}